<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="550px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/listView" />

    <ImageView
        android:id="@+id/recipeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="657dp"
        android:layout_marginEnd="360dp"
        android:layout_marginRight="360dp"
        app:srcCompat="@drawable/REMLogo" />

    <TextView
        android:id="@+id/tagsText"
        android:layout_width="350px"
        android:layout_height="wrap_content"
        android:text="Tags: "
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:layout_below="@+id/prepTimeText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="31dp"
        android:layout_alignBottom="@+id/recipeImage" />

    <TextView
        android:id="@+id/prepTimeText"
        android:layout_width="350px"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="Total Preparation Time"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:layout_below="@+id/recipeNameText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/recipeNameText"
        android:layout_width="350px"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="Recipe Name"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/ingredientsText"
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:text="Ingredients Here"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_above="@+id/listView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>